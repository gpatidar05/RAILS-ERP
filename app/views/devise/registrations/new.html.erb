<!-- Main Wrapper -->
<div id="main-wrapper">
  <div class="top-bg">
    <div class="container">
      <div class="login-logo">
        <figure>
          <img src="<%=image_path("login-logo.png")%>" class="img-responsive" alt="ERP" />
        </figure>
      </div>
      <div class="login-box">
        <div class="login-head">
          <h1>Sign up</h1>
        </div>    
        <div class="login-form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email %>
              <label for="input" class="input-label">Email <code><%= resource.errors[:email][0] %></code></label><i class="bar"></i>
            </div>     
            <div class="form-group">
              <%= f.text_field :first_name %>
              <label for="input" class="input-label">First Name <code><%= resource.errors[:first_name][0] %></code></label><i class="bar"></i>
            </div>     
            <div class="form-group">
              <%= f.text_field :last_name %>
              <label for="input" class="input-label">Last Name <code><%= resource.errors[:last_name][0] %></code></label><i class="bar"></i>
            </div>       
            <div class="form-group">
              <%= f.password_field :password %>
              <label for="input" class="input-label">Password <code><%= resource.errors[:password][0] %></code></label><i class="bar"></i>
            </div>      
            <div class="form-group">
              <%= f.password_field :password_confirmation %>
              <label for="input" class="input-label">Repeat Password <code><%= resource.errors[:password_confirmation][0] %></code></label><i class="bar"></i>
            </div>     
            <div class="button-container">
              <button type="submit" class="button-signup"><span>Sign Up</span></button>
            </div>        
            <div class="row">
              <div class="col-md-4 col-sm-4">
                <%= link_to new_session_path(resource), class:"button-1" do %>
                  <span>Login</span>
                <% end %>
              </div>
              <div class="col-md-8 col-sm-8">
                <div class="text-li1">
                  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource) %>
                </div>
              </div>
            </div>            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>