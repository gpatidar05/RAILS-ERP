<!-- Main Wrapper -->
<div id="main-wrapper">
  <div class="top-bg">
    <div class="container">
      <div class="login-logo">
        <figure>
          <img src="<%=image_path("login-logo.png")%>" class="img-responsive" alt="ERP" />
        </figure>
      </div>
      <div class="login-box">
        <div class="login-head">
          <h1>Login</h1>
        </div>  
        <div class="login-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true %>
              <label for="input" class="input-label">Email</label><i class="bar"></i>
            </div>        
            <div class="form-group padd-b">
              <%= f.password_field :password, autocomplete: "off" %>
              <label for="input" class="input-label">Password</label><i class="bar"></i>
            </div>        
            <div class="row">
              <div class="col-md-6 col-sm-6">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %><i class="helper"></i>Remember me
                  </label>
                </div>
              </div>
              <div class="col-md-6 col-sm-6">
                <div class="forgot">
                  <%= link_to "Forgot Your password?", new_password_path(resource_name) %><br />
                </div>
              </div>
            </div>       
            <div class="button-container">
              <button type="submit" class="button"><span>Login</span></button>
            </div>     
            <div class="row">
              <div class="col-md-4 col-sm-4">
                <%= link_to new_registration_path(resource_name), class:"button-1" do %>
                  <span>Sign up</span>
                <% end %>
              </div>
              <div class="col-md-8 col-sm-8">
                  <div class="text-li1">
                    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
                  </div>
              </div>
            </div>        
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>