<% if error = (flash[:alert] || flash[:error]) %>
  <script>
    show_top_alert_message('error', <%= error.to_json.html_safe %>)
  </script>
<% end %>

<% if success = (flash[:notice] || flash[:success]) %>
  <script>
    show_top_alert_message('success', <%= success.to_json.html_safe %>)
  </script>
<% end %>

<script>
  if ($('.alert:not(.top-alert-box .alert):visible,.alert-red:visible').length > 0)
    $('.top-alert-box').remove();
</script>